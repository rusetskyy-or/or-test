[select 'TMPLCHG 314.01' TMPL_CHG_ID,
        CASE WHEN @tmpl_wh > 0 then 'NR'
             when COUNT(*) > 0 THEN 'PO'
             ELSE 'NR'
        END AS STATUS
   from aremst,
        dscmst
  where short_dsc = 'HFWC'
    and /*=varchar(*/ aremst.arecod || '|' || aremst.wh_id /*=)*/ = dscmst.colval
    and dscmst.colnam = 'arecod|wh_id'
    and aremst.clr_dstloc_flg = 0]